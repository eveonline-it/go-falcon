# Go Falcon Environment Configuration Example
# Copy this file to .env and update with your actual values

# =============================================================================
# EVE Online SSO Configuration
# =============================================================================
# Register your application at: https://developers.eveonline.com/
EVE_CLIENT_ID=your_eve_application_client_id
EVE_CLIENT_SECRET=your_eve_application_client_secret
EVE_REDIRECT_URI=http://localhost:3000/auth/eve/callback
EVE_SCOPES=publicData esi-characters.read_blueprints.v1

# JWT Secret for internal token signing (use a strong, random 32+ character string)
JWT_SECRET=your_jwt_secret_key_should_be_very_long_and_random

# Cookie Configuration
# Duration for auth cookies - accepts Go duration format: "24h", "7d", "30m", "1h30m"
COOKIE_DURATION=24h

# =============================================================================
# Database Configuration
# =============================================================================
MONGODB_URI=mongodb://admin:password123@localhost:27017/falcon?authSource=admin
REDIS_URL=redis://localhost:6379

# =============================================================================
# EVE ESI Configuration
# =============================================================================
# User-Agent header for ESI requests (REQUIRED by CCP Games)
# Format: "AppName/Version (contact info) +source_url"
ESI_USER_AGENT=go-falcon/1.0.0 (your-email@domain.com) +https://github.com/yourorg/go-falcon

# =============================================================================
# Application Configuration
# =============================================================================
# Server configuration
PORT=3000
HOST=0.0.0.0
API_PREFIX=

# WebSocket Configuration
# Full WebSocket URL that clients should connect to (include protocol: ws:// or wss://)
WEBSOCKET_URL=wss://localhost:3000/websocket/connect
# WebSocket endpoint path for internal routing (path only)
WEBSOCKET_PATH=/websocket/connect
# Allowed origins for WebSocket connections (comma-separated)
WEBSOCKET_ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000,https://localhost:3000

# OpenAPI Configuration
# Custom OpenAPI servers (optional) - format: "url1|description1,url2|description2"
# Example: OPENAPI_SERVERS=https://api.prod.com|Production,https://api.staging.com|Staging,http://localhost:3000|Development
OPENAPI_SERVERS=

# HUMA API Server Configuration (optional)
# HUMA_PORT=8081
# HUMA_HOST=0.0.0.0
# HUMA_SEPARATE_SERVER=false

# Frontend configuration
FRONTEND_URL=https://go.eveonline.it

# Telemetry Configuration
ENABLE_TELEMETRY=false
SERVICE_NAME=gateway-dev
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4318

# Logging Configuration
LOG_LEVEL=debug
ENABLE_PRETTY_LOGS=true
DISABLE_CONSOLE_LOG=false

# Environment
NODE_ENV=development

# Development specific
HOT_RELOAD=true

# =============================================================================
# Security Configuration
# =============================================================================
# CORS settings for frontend integration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Session configuration
SESSION_TIMEOUT=86400  # 24 hours in seconds
REFRESH_TOKEN_EXPIRY=2592000  # 30 days in seconds

# =============================================================================
# Backend Status Service Configuration
# =============================================================================
# Enable/disable status broadcasting to WebSocket clients
STATUS_BROADCAST_ENABLED=true

# How often to broadcast status updates to all connected users
STATUS_BROADCAST_INTERVAL=30s

# How often to check for status changes (for immediate broadcasting)  
STATUS_CHANGE_DETECTION_INTERVAL=5s

# Enable critical alert system for immediate failure notifications
STATUS_CRITICAL_ALERT_ENABLED=true

# Alert thresholds
STATUS_ALERT_CPU_THRESHOLD=90
STATUS_ALERT_MEMORY_THRESHOLD=500
STATUS_ALERT_ERROR_RATE_THRESHOLD=5